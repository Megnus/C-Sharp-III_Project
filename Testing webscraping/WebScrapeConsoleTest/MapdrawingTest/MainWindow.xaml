<Window x:Name="mainWindow" x:Class="MapdrawingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="767" Width="1250.746">
    <Grid Name="myGrid">

        <Image x:Name="mapImage" HorizontalAlignment="Left" Height="704" VerticalAlignment="Top" Width="300" Margin="10,10,10,10" />
        <Viewbox x:Name="vbab" Margin="0,0,291,700" Width="20" Height="20" >
            <Grid>
                <Ellipse Height="100" Width="100" StrokeThickness="2" Stroke="Black"/>
                <Line  X1="15" Y1="15" X2="85" Y2="85" Stroke="Black" StrokeThickness="1" />
                <Line  X1="15" Y1="85" X2="85" Y2="15" Stroke="Black" StrokeThickness="1" Panel.ZIndex="100" />
            </Grid>
        </Viewbox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="243,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="704" VerticalAlignment="Top" Width="300" Margin="10,10,10,10"/>

        <TabControl Margin="385,8,10,22">
            <TabItem Header="Webscaping progress" >
                <ListBox Name="PersonsList" HorizontalContentAlignment="Stretch" Margin="16,415,11,12" RenderTransformOrigin="0.5,0.5" FontSize="9">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding PersonId}" />
                                <TextBlock Grid.Column="1" Text="{Binding Id}" />
                                <TextBlock Grid.Column="2" Text="{Binding Name}" />
                                <TextBlock Grid.Column="3" Text="{Binding Phone}" />
                                <TextBlock Grid.Column="4" Text="{Binding BirthDate}" />
                                <TextBlock Grid.Column="5" Text="{Binding Address.Street}" />
                                <TextBlock Grid.Column="6" Text="{Binding Address.XCoord}" />
                                <TextBlock Grid.Column="7" Text="{Binding Address.YCoord}" />
                                <TextBlock Grid.Column="8" Text="{Binding Address.Postal.PostalCode}" />
                                <TextBlock Grid.Column="9" Text="{Binding Address.Postal.City}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Details" />
        </TabControl>





    </Grid>
</Window>
